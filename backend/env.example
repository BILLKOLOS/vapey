# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/vapey-investment
MONGODB_URI_PROD=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/vapey-investment

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# API Keys (for external services)
COINAPI_KEY=your-coinapi-key
BLOCKCHAIN_API_KEY=your-blockchain-api-key 